{
  "name": "@jonathanbennett/room-assistant",
  "version": "1.0.1",
  "description": "Presence tracking and more for automation on the room-level",
  "author": "Heiko Rothe <me@heikorothe.com> (https://heikorothe.com)",
  "license": "MIT",
  "repository": "github:jonathanbennett/room-assistant",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "keywords": [
    "smart home",
    "home automation",
    "home assistant",
    "presence",
    "bluetooth",
    "thermopile"
  ],
  "homepage": "https://www.room-assistant.io",
  "bugs": "https://github.com/jonathanbennett/room-assistant/issues",
  "funding": "https://github.com/jonathanbennett/room-assistant?sponsor=1",
  "bin": "./bin/room-assistant.js",
  "main": "dist/src/main.js",
  "types": "dist/src/main.d.ts",
  "files": [
    "dist/**/*.{js,ts}",
    "dist/config/definitions/*.yml",
    "bin/*.js",
    ".github/FUNDING.yml"
  ],
  "scripts": {
    "prepack": "npm run build",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "prepare": "husky install",
    "postinstall": "github-sponsors",
    "format": "prettier --write \"src/**/*.ts\" \"bin/*.js\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint '{src,apps,libs,test,bin}/**/*.{ts,js}'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs"
  },
  "dependencies": {
    "2d-array-rotation": "^2.1.1",
    "@nestjs/common": "^11.0.17",
    "@nestjs/core": "^11.0.17",
    "@nestjs/platform-express": "^11.0.17",
    "@nestjs/platform-ws": "^11.0.17",
    "@nestjs/schedule": "^5.0.1",
    "@nestjs/swagger": "^11.1.3",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/websockets": "^11.0.17",
    "@willsoto/nestjs-prometheus": "^6.0.2",
    "async-mqtt": "^2.6.1",
    "async-mutex": "^0.3.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.1",
    "command-line-args": "^5.1.1",
    "command-line-usage": "^6.1.1",
    "config": "^3.3.6",
    "democracy": "^3.1.3",
    "eslint-scope": "8.3.0",
    "github-sponsors": "^1.0.1",
    "joiful": "^3.0.0",
    "js-yaml": "^4.0.0",
    "kalmanjs": "^1.1.0",
    "lodash": "^4.17.21",
    "mathjs": "^10.0.0",
    "nest-emitter": "^1.1.1",
    "nest-winston": "^1.6.0",
    "please-upgrade-node": "^3.2.0",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "search-insights": "2.17.3",
    "slugify": "^1.5.0",
    "swagger-ui-express": "^4.1.6",
    "systeminformation": "^5.6.12",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@nestjs/cli": "^8.0.2",
    "@nestjs/schematics": "^8.0.2",
    "@nestjs/testing": "^8.0.4",
    "@types/config": "^3.3.5",
    "@types/express": "^4.17.11",
    "@types/i2c-bus": "^5.1.0",
    "@types/lodash": "^4.14.168",
    "@types/mdns": "0.0.34",
    "@types/node": "^14.18.63",
    "@types/supertest": "^2.0.11",
    "@types/ws": "^8.2.1",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "@vuepress/plugin-docsearch": "^2.0.0-beta.27",
    "@vuepress/plugin-pwa": "^2.0.0-beta.27",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "esm": "^3.2.25",
    "husky": "^7.0.0",
    "lint-staged": "^12.3.5",
    "prettier": "2.5.1",
    "pretty-quick": "^4.1.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.1.1",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1",
    "vuepress": "^2.0.0-beta.27",
    "webpack": "^5.53.0"
  },
  "optionalDependencies": {
    "@mkerix/noble": "1.9.2-11.1",
    "bleno": "npm:@abandonware/bleno@^0.5.1-3",
    "canvas": "^2.11.2",
    "i2c-bus": "^5.1.0",
    "mdns": "^2.7.2",
    "onoff": "^6.0.0",
    "sd-notify": "^2.8.0",
    "winston-elasticsearch": "^0.16.1",
    "winston-loki": "^6.0.5"
  },
  "peerDependenciesMeta": {
    "winston-elasticsearch": {
      "optional": true
    },
    "winston-loki": {
      "optional": true
    }
  },
  "engines": {
    "node": ">= 12 < 23"
  },
  "lint-staged": {
    "*.{ts,js}": "eslint"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "node"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "testEnvironment": "node",
    "setupFiles": [
      "./env.ts"
    ]
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "beta",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "packageManager": "yarn@4.8.1"
}
